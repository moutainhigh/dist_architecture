        ID,
		CREATE_TIME,
		VERSION,
		MODIFY_TIME,
		MERCHANT_NO,
        MERCHANT_TYPE,
		STATUS,
		TRANSIT_AMOUNT
    </sql>

    <!-- 插入记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.xpay.facade.accounttransit.entity.AccountTransit">
        INSERT INTO
        <include refid="table"/>
        (
        CREATE_TIME,
        VERSION,
        MODIFY_TIME,
        MERCHANT_NO,
        MERCHANT_TYPE,
        STATUS,
        TRANSIT_AMOUNT
        ) VALUES (
        #{createTime,jdbcType=TIMESTAMP},
        0,
        #{modifyTime,jdbcType=TIMESTAMP},
        #{merchantNo,jdbcType=VARCHAR},
        #{merchantType,jdbcType=TINYINT},
        #{status,jdbcType=TINYINT},
        #{transitAmount,jdbcType=DECIMAL}
        )
    </insert>

    <!-- 批量插入记录 -->
    <insert id="batchInsert" useGeneratedKeys="true" keyProperty="id" parameterType="list">
        INSERT INTO
        <include refid="table"/>
        (
        CREATE_TIME,
        VERSION,
        MODIFY_TIME,
        MERCHANT_NO,
        MERCHANT_TYPE,
        STATUS,
        TRANSIT_AMOUNT
        ) VALUES
        <foreach collection="list" item="item" separator=",">
            (
            #{item.createTime,jdbcType=TIMESTAMP},
            0,
            #{item.modifyTime,jdbcType=TIMESTAMP},
            #{item.merchantNo,jdbcType=VARCHAR},
            #{item.merchantType,jdbcType=TINYINT},
            #{item.status,jdbcType=TINYINT},
            #{item.transitAmount,jdbcType=DECIMAL}
            )
        </foreach>
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.xpay.facade.accounttransit.entity.AccountTransit">
        UPDATE
        <include refid="table"/>
        <set>
            VERSION = #{version,jdbcType=BIGINT} + 1,
            MODIFY_TIME = #{modifyTime,jdbcType=TIMESTAMP},
            STATUS = #{status,jdbcType=TINYINT},
            TRANSIT_AMOUNT = #{transitAmount,jdbcType=DECIMAL}
        </set>
        WHERE ID = #{id,jdbcType=BIGINT} and VERSION = #{version,jdbcType=BIGINT}
    </update>

    <!-- 只更新不为null的属性 -->
    <update id="updateIfNotNull" parameterType="com.xpay.facade.accounttransit.entity.AccountTransit">
        UPDATE
        <include refid="table"/>
        <set>
            VERSION = #{version,jdbcType=BIGINT} + 1,
            <if test="modifyTime != null">
                MODIFY_TIME = #{modifyTime,jdbcType=TIMESTAMP},
            </if>
            <if test="status != null">
                STATUS = #{status,jdbcType=TINYINT},
            </if>
            <if test="transitAmount != null">
                TRANSIT_AMOUNT = #{transitAmount,jdbcType=DECIMAL},
            </if>
        </set>
        WHERE ID = #{id,jdbcType=BIGINT} and VERSION = #{version,jdbcType=BIGINT}
